<Window x:Class="ShowW3p.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl Name="tabMenu">
            <TabItem Header="Search">
                <StackPanel>
                    <StackPanel>
                        <Label>Process</Label>
                        <TextBox Name="txtProces"></TextBox>
                    </StackPanel>
                    <StackPanel>
                        <Label>Machine</Label>
                        <TextBox Name="txtMachine"></TextBox>
                    </StackPanel>
                    <StackPanel>
                        <Label>Needle</Label>
                        <TextBox Name="txtNeedle"></TextBox>
                        <Button Click="OK_Click">Find</Button>
                    </StackPanel>
                </StackPanel>

            </TabItem>
            <TabItem Header="result" Name="tabitemResult">
                <DataGrid Name="gridResult"></DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
